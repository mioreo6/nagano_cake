<div class="container pt-3">
     <h5 class="col-2 text-center" style="background-color: #ddd;">配送先登録/一覧</h5>

<div class="row">
<div class="mx-auto col-12">
     <%= form_with model: @address, url: addresses_path, method: :post, local: true do |f| %>

      <label class="col-md-3"><%= f.label '郵便番号(ハイフンなし)' %></label>
       <%= f.number_field :postal_code, placeholder: "0000000" %></br>

      <label class="col-md-3"> <%= f.label '住所' %></label>
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園0-0", :size=> "60" %></br>

     <label class="col-md-3"><%= f.label '宛名' %></label>
    <label class="mr-5"> <%= f.text_field :name, placeholder: "令和道子"%></label>

      <%= f.submit "新規登録", class:"btn btn-success px-5" %>

     <% end %>
</div>
</div>
<div class="row">
  <div class-"col-10">
    <table class="table table-bordered">
    <tr class="table-secondary">
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td></td>
    </tr>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success" %></td>
    </tr>
    <% end %>
    </table>


  </div>
</div>
</div>