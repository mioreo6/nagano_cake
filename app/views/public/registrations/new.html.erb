
<div class="container pt-3">
<h5 class="col-2 text-center ml-5 mb-5" style="background-color: #ddd;">新規会員登録</h5>
 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


   <label class="col-md-2"><%= f.label '名前' %></label>
  <label class="col-md-1 text-right">(姓)</label>
  <%= f.text_field :last_name, placeholder: "令和"%>
<label class="col-md-1 text-right">(名)</label>
    <%= f.text_field :first_name, placeholder: "道子" %></br>

   <label class="col-md-2"> <%= f.label 'フリガナ' %></label>
  <label class="col-md-1 text-right">(セイ)</label>
  <%= f.text_field :last_name_kana, placeholder: "レイワ" %>
     <label class="col-md-1 text-right">(メイ)</label>
     <%= f.text_field :first_name_kana, placeholder: "ミチコ" %></br>


   <label class="col-md-3"> <%= f.label 'メールアドレス' %></label>
   <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Sample@example.com"%></br>

   <label class="col-md-3"> <%= f.label '郵便番号(ハイフンなし)' %></label>
   <%= f.number_field :postal_code, placeholder: "0000000" %></br>

   <label class="col-md-3"> <%= f.label '住所' %></label>
   <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園0-0", :size=> "60" %></br>
   <label class="col-md-3"> <%= f.label '電話番号(ハイフンなし)' %></label>
    <%= f.telephone_field :telephone_number, placeholder: "00000000000"%></br>

   <label class="col-md-3"> <%= f.label 'パスワード' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %></label>
       <%= f.password_field :password, autocomplete: "new-password" %></br>

   <label class="col-md-3">  <%= f.label 'パスワード(確認用)' %></label>
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %></br>



  <label class="col-md-3"></label>
      <%= f.submit "新規登録", class:"btn btn-success px-5" %>
    <% end %>






<h5 class="col-3 text-center mt-4" style="background-color: #ddd;">既に登録済みの方</h5>
<%= render "public/shared/links" %>からログインしてください。
  </div>