<div class="container pt-3">
  <div class="row">

 <div class="col-2 h-75">
 <div class="border border-dark ">
    <p class="my-1 text-center"> ジャンル検索</p>
   </div>

   <div class="border border-dark border-top-0 pt-2 pl-2">
     <% @genres.each do |genre| %>
     <%= genre.name %></br>
     <% end %>
   </div>
 </div>

 <div class="col-10">
   <%= image_tag @item.image %>
   <span class="font-weight-bold"><%= @item.name %></span></br>
   <%= @item.introduction %></br>
   ￥<%= @item.add_tax_price %>(税込)</br>
   <% if @item.is_active == true %>
    <%= form_with model: @cart_item, url: public_cart_items_path, method: :post, local: true do |f| %>
    <%= f.label :quantity, "個数選択" %>
    <%= f.select :amount, *[1..10] %>
    <%= f.hidden_field :item_id, :value => @item.id %>
    <%= f.submit 'カートに入れる', class:"btn btn-success" %>
    <% end %>
   <% end %>


 </div>

</div>
</div>