<div class="container pt-3">
  <div class="row">
 <div class="col-2 h-75">

   <div class="border border-dark ">
    <p class="my-1 text-center"> ジャンル検索</p>
   </div>

   <div class="border border-dark border-top-0 pt-2 pl-2">
     <% @genres.each do |genre| %>
     <%= genre.name %></br>
     <% end %>
   </div>
 </div>


  <div class="col-10 ">
   <h3 class="my-3 d-inline">商品一覧</h3>
   （全<%= @item.count %>件）</br>
   <div class="d-flex flex-wrap mt-5">
   <% @items.each do |item| %>
   <div class="col-3">
   <%= image_tag item.image, class:"img-fluid h-50 w-100"  %></br>
   <%= link_to item.name, item_path(item.id) %></br>
   ￥<%= item.price %>
   </div>
   <% end %>
   </div>
   <div class="mx-auto col-1">
 <%= paginate @items %>
 </div>
   </div>
 </div>

 </div>
