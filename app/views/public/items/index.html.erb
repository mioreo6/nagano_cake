<div class="container pt-3">
  <div class="row">
 <div class="col-2 h-75">

   <div class="border border-dark ">
    <p class="my-1 text-center"> ジャンル検索</p>
   </div>

   <div class="border border-dark border-top-0 pt-2 pl-2">
     <% @genres.each do |genre| %>
     <%= genre.name %></br>
     <% end %>
   </div>

 </div>
  <div class="col-10">
   <h3 class="my-3 d-inline">商品一覧</h3>
   （全<%= @item.count %>件）</br>
   <div class="col-2">
   <% @items.each do |item| %>
   <%= image_tag item.image, :size=> '20×20' %></br>
   <%= link_to item.name, public_item_path(item.id) %></br>
   ￥<%= item.price %>
   <% end %>
   </div>
   </div>
 </div>
 <%= paginate @items %>
 </div>
