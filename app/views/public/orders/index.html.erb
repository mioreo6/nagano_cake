<div class="container px-2 px-sm-0">
  <h5 class="col-3 text-center" style="background-color: #ddd;">注文履歴一覧</h5>
  <div class="row">
     <table class="table table-bordered">
    <tr class="table-secondary">
      <td style="background-color: #ddd;">注文日</td>
      <td style="background-color: #ddd;">配送先</td>
      <td style="background-color: #ddd;">注文商品</td>
      <td style="background-color: #ddd;">支払金額</td>
      <td style="background-color: #ddd;">ステータス</td>
       <td style="background-color: #ddd;">注文詳細</td>
    </tr>
<% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>〒<%= order.postal_code %></br>
      <%= order.address %></br>
      <%= order.name %>
      </td>
      <td><% order.order_details.each do |order_detail| %>
      <%= order_detail.item.name %></br>
      <% end %>
      </td>

      <td>
        <%= (order.total_payment + 800).to_s(:delimited) %>円
      </td>
      <td></td>
　　　<td><%= link_to '表示する', order_path(order.id), class:'btn btn-primary' %></td>
    </tr>
    <% end %>
    </table>

  </div>
 </div>