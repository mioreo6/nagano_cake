<div class="container pt-3">
  <h5 class="col-3 text-center" style="background-color: #ddd;">注文情報入力</h5>
  <div class="row">

<%= form_with model: @order, url: public_orders_path, method: :post, local: true do |f| %>
 <div>
   <h5>支払方法</h5>

   <%= f.radio_button :payment_method, :credit_card %><%= f.label "クレジットカード" %>
   <%= f.radio_button :payment_method, :transfer %><%= f.label "銀行振込" %>

 </div>

 <div>
   <h5>お届け先</h5>
   <%= f.radio_button :address, :address %><%= f.label "ご自身の住所" %></br>
   〒<%= @orders.customer.postal_code %>　<%= @orders.customer.address %></br>
   <%= @orders.customer.name %>


 </div>
 <% end %>


</div>
</div>
