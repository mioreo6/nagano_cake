<div class="container pt-3">
  <h5 class="col-3 text-center mb-3 ml-5" style="background-color: #ddd;">注文情報入力</h5>
  <div class="row">
<div class="col-10">
<%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>

   <h5 class="font-weight-bold">支払方法</h5>
 <div class="ml-5">
   <%= f.radio_button :payment_method, :credit_card %><%= f.label "クレジットカード" %>
   <%= f.radio_button :payment_method, :transfer %><%= f.label "銀行振込" %>

 </div>


   <h5 class="font-weight-bold">お届け先</h5>
  <div class="ml-5">
   <%= f.radio_button :address, :address %><%= f.label "ご自身の住所" %></br>
   <%= "　" %>〒<%= @orders.postal_code %>　<%= @orders.address %></br><%= "　" %><%= @orders.last_name %><%= @orders.first_name %></br>
   <%= f.radio_button :address, :address %><%= f.label "登録済住所から選択" %></br>
   <%= "　" %><%= f.collection_select :address, Address.all, :id, :add_address, class:"col-6" %></br>
    <%= f.radio_button :address, :address %><%= f.label "新しいお届け先" %></br>
   <label class="col-3">郵便番号(ハイフンなし)</label>
    <%= f.number_field :postal_code, placeholder: "0000000", class:"col-2" %></br>
    <label class="col-3">住所</label>
     <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class:"col-4" %></br>
     <label class="col-3">宛名</label>
     <%= f.text_field :name, placeholder: "令和道子", class:"col-2" %></br>
     <div class="col-3"><%= link_to '確認画面へ進む', orders_confirm_path, method: :post, class:"btn btn-primary px-2"%></div>
 </div>
 <% end %>

</div>
</div>
</div>
