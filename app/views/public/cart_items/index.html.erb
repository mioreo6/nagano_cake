<div class="container px-2 px-sm-0">
  <h5 class="col-3 text-center" style="background-color: #ddd;">ショッピングカート</h5>
  <div class="row">
    <div class="col-11 mx-auto">
     <table class="table table-bordered">
    <tr class="table-secondary">
      <td style="background-color: #ddd;">商品名</td>
      <td style="background-color: #ddd;">単価(税込)</td>
      <td style="background-color: #ddd;">数量</td>
      <td style="background-color: #ddd;">小計</td>
      <td></td>
    </tr>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td class="col-4"><%= image_tag cart_item.item.image, class:"img-fluid col-2" %><%= cart_item.item.name %></td>
      <td class="col-2"><%= cart_item.item.add_tax_price %></td>
      <td class="col-2"> <%= form_with model: @cart_item, url: cart_item_path(cart_item.id), method: :patch, local: true do |f| %>

  　　　　　　　　 <%= f.select :amount,  *[1..9], placheholder: cart_item.amount %>
  　　　　 　　<%= f.hidden_field :item_id, :value => @item_id %>
  　       <%= f.submit '変更', class:"btn btn-success" %>
   　　　　　　<% end %>
　　　</td>
　　　<td class="col-2"></td>
    </tr>
    <% end %>
    </table>
</div>
  </div>
 </div>

