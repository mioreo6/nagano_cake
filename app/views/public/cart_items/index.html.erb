<div class="container px-2 px-sm-0">
  <h5 class="col-3 text-center" style="background-color: #ddd;">ショッピングカート</h5>
  <div class="row">
     <table class="table table-bordered">
    <tr class="table-secondary">
      <td style="background-color: #ddd;">商品名</td>
      <td style="background-color: #ddd;">単価(税込)</td>
      <td style="background-color: #ddd;">数量</td>
      <td style="background-color: #ddd;">小計</td>
      <td></td>
    </tr>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.image %></td>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.add_tax_price %></td>
      <td> <%= form_with model: @cart_item, url: public_cart_item_path(cart_item.id), method: :patch, local: true do |f| %>

  　　　　　　　　 <%= f.select :amount,  *[1..9], prompt: cart_item.amount %>
  　　　　 　　<%= f.hidden_field :item_id, :value => @item_id %>
  　       <%= f.submit '変更', class:"btn btn-success" %>
   　　　　　　<% end %>
　　　</td>
    </tr>
    <% end %>
    </table>

  </div>
 </div>

