<div class="container px-2 px-sm-0">
  <div class="row">
      <h5>注文履歴一覧</h5>
  </div>
<div class="row">
<table class="table">
  <thead class="table-secondary">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.created_at, admin_order(order.id) %></td>
      <td><%= order.customer.last_name %></td>
      <td><%= order.order_detail.amount %></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>