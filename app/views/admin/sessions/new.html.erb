<div class="container pt-3">
  <div class="ml-5 col-2 text-center" style="background-color: #ddd;">
  <h5>管理者ログイン</h5>
  </div>
<div class="row pt-5">

<div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">



<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group row">
    <label class="col-md-4">メールアドレス</label>
    <div class="col">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Sample@example.com", :size=> "40" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-md-4 col-form-label">パスワード</label>
    <div class="col-md-8">
    <%= f.password_field :password, autocomplete: "current-password", :size=> "40" %>
    </div>
  </div>

  <div class="form-group row">
  <label class="col-md-4"></label>
  <div class="actions col-md-6">
    <input class="btn btn-primary px-5" type="submit" Value="ログイン" >
  </div>
  </div>
<% end %>
</div>


</div>

<%= render "admin/shared/links" %>
</div>

