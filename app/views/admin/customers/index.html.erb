<div class="container px-2 px-sm-0">
<h5 class="col-2 text-center mb-5 ml-5" style="background-color: #ddd;">会員一覧</h5>
    <div class="row">
      <div class="col-8 mx-auto">
  <table class="table">
  <thead class="table-secondary">
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to admin_customer_path(customer.id) do %><%= customer.last_name %><%= customer.first_name %><% end %></td>
      <td><%= customer.email %></td>
      <td><% if customer.is_deleted == false %><span class="text-success font-weight-bold">有効</span>
          <% else %><span class="text-secondary font-weight-bold">退会</span>
          <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
  </div>
</div>
<div class="col-1 mx-auto">
<%= paginate @customers %>
</div>