<div class="container px-2 px-sm-0">
  <div class="row">
    <h5><%= customer.last_name,customer.first_name %>さんの会員情報編集</h5>
  </div>
  <%= form_with model: @customer, url: admin_customer_path, method: :patch, local: true do |f| %>
  <div class="row">
    <label>会員ID</label>
    <%= cutomer.id %>
  </div>
   <div class="row">
    <label>氏名</label>
    <%= f.text_field :last_name%>
    <%= f.text_field :firstt_name%>
  </div>
   <div class="row">
    <label>フリガナ</label>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>
   <div class="row">
    <label>郵便番号</label>
    <%= f.number_field :postal_code %>
  </div>
   <div class="row">
    <label>住所</label>
    <%= f.text_area :address %>
  </div>
   <div class="row">
    <label>電話番号</label>
    <%= f.phone_field :telephone_number%>
  </div>
   <div class="row">
    <label>メールアドレス</label>
    <%= f.email_field :email %>
  </div>
   <div class="row">
    <label>会員ステータス</label>
     　<%= f.radio_button :is_deleted, :false %>
      <%= f.label :is_deleted, "有効" %>
      <%= f.radio_button :is_deleted, :true %>
      <%= f.label :is_deleted, "退会" %>
  </div>
  <div class="row">
     <input class="btn btn-success" type="submit" Value="変更を保存" >
  </div>
  <% end %>
</div>
