<div class="container px-2 px-sm-0">
    <h5 class="col-3 text-center" style="background-color: #ddd;"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h5>
<div class="row">
<div class="col-10">
  <%= form_with model: @customer, url: admin_customer_path, method: :patch, local: true do |f| %>

    <label class="col-md-3">会員ID</label>
    <%= @customer.id %></br>


    <label class="col-md-3">氏名</label>
    <%= f.text_field :last_name%>
    <%= f.text_field :first_name%></br>


    <label class="col-md-3">フリガナ</label>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %></br>

    <label class="col-md-3">郵便番号</label>
    <%= f.number_field :postal_code %></br>

    <label class="col-md-3">住所</label>
    <%= f.text_field :address %></br>

    <label class="col-md-3">電話番号</label>
    <%= f.phone_field :telephone_number%></br>

    <label class="col-md-3">メールアドレス</label>
    <%= f.email_field :email %></br>

    <label class="col-md-3">会員ステータス</label>
     　<%= f.radio_button :is_deleted, :false %>
      <%= f.label :is_deleted, "有効" %>
      <%= f.radio_button :is_deleted, :true %>
      <%= f.label :is_deleted, "退会" %></br>

     <label class="col-md-3"></label>
     <%= f.submit '変更を保存', class:"btn btn-success px-5" %>

  <% end %>
</div>
</div>
</div>
