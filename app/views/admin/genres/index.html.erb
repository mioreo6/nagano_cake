<div class="container px-2 px-sm-0">
<h5 class="col-3 text-center" style="background-color: #ddd;">ジャンル一覧・追加</h5>
<div class="row mb-5 mt-5">
<label class="col-2" >ジャンル名</label>
<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
<%= f.text_field :name, placeholder: "ジャンル名", class:"mr-5" %>
 <%= f.submit '新規登録', class:"btn btn-success px-5"%>
<% end %>
</div>
<div class="row">

<table class="table col-4">
  <thead class="table-secondary">
    <tr>
      <th class="col-8"><div class="ml-4">ジャンル</div></th>
      <th></th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
    </tr>
  </tbody>

<% end %>
</table>
</div>
</div>