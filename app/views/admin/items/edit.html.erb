<div class="container px-2 px-sm-0">
  <h5>商品編集</h5>
  <div class="row mx-auto">
     <%= form_with model: @item, url: admin_update_item_path, method: :patch, local: true do |f| %>
    <div  class="row">
     <label>商品画像</label>
     <%= f.file_field :image , accept: "image/*" %>
    </div>
    <div  class="row">
      <label>商品名</label>
      <%= f.text_field :name %>
    </div>
    <div  class="row">
      <label>商品説明</label>
      <%= f.text_area :introduction %>
    </div>
    <div  class="row">
      <label>ジャンル</label>
      <%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "選択してください" %>

    </div>
    <div  class="row">
      <label>税抜価格</label>
      <%= f.number_field :price %>円
    </div>
    <div  class="row">
      <label>販売ステータス</label>

      <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active, "販売中" %>
      <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, "販売停止中" %>

    </div>
    <div class="row">
     <input class="btn btn-success" type="submit" Value="変更を保存" >
    </div>
    <% end %>
  </div>
</div>